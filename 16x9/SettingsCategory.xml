<?xml version="1.0" encoding="UTF-8"?>
<window>
<defaultcontrol always="true">3</defaultcontrol>
<allowoverlay>yes</allowoverlay>
<controls>
    <!--background-->
    <include condition="!Skin.HasSetting(lights.out)">GlobalBackground</include>
    <include>Furniture_EmbyClock</include>
    <include>Furniture_HeaderEmby</include>
    <include>Furniture_NowPlaying</include>
    <!--placeholder label for current setting group title-->
    <control type="label" id="2">
        <visible>false</visible>
        <posx>0</posx>
        <posy>0</posy>
        <width>8-col</width>
        <font>Small</font>
        <label>-</label>
        <textcolor>white</textcolor>
    </control>
    <!--Settings category-->
    <control type="group" id="9001">
        <left>NewSidePad</left>
        <top>TopPad</top>
        <!--animations-->
        <include>Animation.Common</include>
        <control type="image">
            <height>72</height>
            <texture>common/white.png</texture>
            <colordiffuse>$VAR[EmbyMenuTextColourHighlight]</colordiffuse>
            <aspectratio>stretch</aspectratio>
        </control>
        <control type="label">
            <height>72</height>
            <aligny>center</aligny>
            <align>center</align>
            <font>HeaderFont</font>
            <label>$INFO[control.getlabel(2)]</label>
            <textcolor>$VAR[EmbyMenuColourHighlight]</textcolor>
            <shadowcolor>-</shadowcolor>
        </control>
        <!--settings level button-->
        <control type="grouplist">
            <left>10</left>
            <posy>0</posy>
            <orientation>horizontal</orientation>
            <control type="label">
                <width>auto</width>
                <height>72w</height>
                <font>SmallHeaderFont</font>
                <aligny>center</aligny>
                <label>$LOCALIZE[31803]:</label>
                <textcolor>white3</textcolor>
                <shadowcolor>-</shadowcolor>
            </control>
            <control type="button" id="20">
                <top>10</top>
                <align>left</align>
                <height>72</height>
                <width>2-col</width>
                <font>SmallHeaderFont</font>
                <label>$LOCALIZE[10037]</label>
                <textcolor>white3</textcolor>
                <focusedcolor>$VAR[ColourHighlight]</focusedcolor>
                <texturefocus>-</texturefocus>
                <texturenofocus>-</texturenofocus>
                <textoffsetx>12</textoffsetx>
                <textoffsety>0</textoffsety>
                <onclick>SettingsLevelChange</onclick>
                <ondown>5</ondown>
            </control>
        </control>
        <!--Category submenu-->
        <control type="grouplist" id="3">
            <posx>0</posx>
            <posy>77</posy>
            <width>500</width>
            <itemgap>10</itemgap>
            <height>824</height>
            <onleft>9000</onleft>
            <onright>5</onright>
            <onup>20</onup>
            <orientation>vertical</orientation>
        </control>
        <control type="grouplist" id="5">
            <left>522</left>
            <top>77</top>
            <right>0</right>
            <height>824</height>
            <itemgap>10</itemgap>
            <onleft>3</onleft>
            <onright>3</onright>
            <onup>20</onup>
            <ondown>5</ondown>
            <orientation>vertical</orientation>
            <itemgap>0</itemgap>
        </control>
        <control type="button" id="7">
            <description>Default Button</description>
            <include>DefSettingsButton2</include>
            <texturenofocus>-</texturenofocus>
        </control>
        <control type="radiobutton" id="8">
            <description>Default Radio Button</description>
            <include>DefSettingsButton2</include>
            <texturenofocus>-</texturenofocus>
        </control>
        <control type="spincontrolex" id="9">
            <description>Default Spin Control</description>
            <include>DefSettingsButton2</include>
            <texturenofocus>-</texturenofocus>
        </control>
        <control type="sliderex" id="13">
            <description>Default Slider</description>
            <include>DefSettingsButton2</include>
            <texturenofocus>-</texturenofocus>
        </control>
        <!--subcat menu buttons-->
        <control type="button" id="10">
            <description>Default Category Button</description>
            <include>DefSettingsButton2</include>
            <font>Small</font>
            <texturenofocus>-</texturenofocus>
        </control>
    </control>
</controls>
</window>
