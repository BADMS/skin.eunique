<?xml version="1.0" encoding="UTF-8"?>
<window>
<defaultcontrol always="true">3</defaultcontrol>
<allowoverlay>yes</allowoverlay>
<controls>
    <!--background-->
    <include condition="!Skin.HasSetting(lights.out)">GlobalBackground</include>
    <include>Furniture_EmbyClock</include>
    <include>Furniture_EmbyHeader</include>
    <include>Furniture_NowPlaying</include>
    <!--placeholder label for current setting group title-->
    <control type="label" id="2">
        <visible>false</visible>
        <posx>0</posx>
        <posy>0</posy>
        <width>8-col</width>
        <font>regular</font>
        <label>-</label>
        <textcolor>white</textcolor>
    </control>
    <!--Settings category-->
    <control type="group" id="9001">
        <posx>col-4-begin</posx>
        <posy>row-5-begin</posy>
        <!--animations-->
        <include>Animation.Common</include>
        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>18-col</width>
            <height>2-row</height>
            <texture>common/white.png</texture>
            <colordiffuse>$VAR[ColourSelected]</colordiffuse>
            <aspectratio>stretch</aspectratio>
        </control>
        <control type="image">
            <posx>0</posx>
            <posy>2-row</posy>
            <width>18-col</width>
            <height>18-row</height>
            <texture colordiffuse="$VAR[EmbyMenuColourHighlight]" border="16">common/box.png</texture>
            <aspectratio>stretch</aspectratio>
        </control>
        <control type="label">
            <posx>24</posx>
            <posy>-10</posy>
            <width>16-col</width>
            <height>2-row</height>
            <aligny>center</aligny>
            <font>MediumBold</font>
            <label>$INFO[control.getlabel(2)]</label>
            <textcolor>$VAR[EmbyMenuColourHighlight]</textcolor>
            <shadowcolor>-</shadowcolor>
        </control>
        <!--settings level button-->
        <control type="grouplist">
            <posx>13-col</posx>
            <posy>-10</posy>
            <orientation>horizontal</orientation>
            <control type="label">
                <width>auto</width>
                <height>2-row</height>
                <font>small</font>
                <aligny>center</aligny>
                <label>$LOCALIZE[31803]:</label>
                <textcolor>$VAR[EmbyMenuColourHighlight]</textcolor>
                <shadowcolor>-</shadowcolor>
            </control>
            <control type="button" id="20">
                <top>10</top>
                <align>left</align>
                <height>2-row</height>
                <width>2-col</width>
                <font>small</font>
                <label>$LOCALIZE[10037]</label>
                <textcolor>$VAR[EmbyMenuColourHighlight]</textcolor>
                <focusedcolor>$VAR[ColourHighlight]</focusedcolor>
                <texturefocus>-</texturefocus>
                <texturenofocus>-</texturenofocus>
                <textoffsetx>12</textoffsetx>
                <textoffsety>0</textoffsety>
                <onclick>SettingsLevelChange</onclick>
                <ondown>5</ondown>
            </control>
        </control>
        <!--Category submenu-->
        <control type="grouplist" id="3">
            <posx>0</posx>
            <posy>2-row</posy>
            <width>4-col</width>
            <itemgap>0</itemgap>
            <height>18-row</height>
            <onleft>9000</onleft>
            <onright>5</onright>
            <onup>20</onup>
            <orientation>vertical</orientation>
        </control>
        <!--options-->
        <control type="image">
            <posx>4-col</posx>
            <posy>2-row</posy>
            <width>14-col</width>
            <height>18-row</height>
            <texture colordiffuse="$VAR[EmbyMenuColourHighlight]" border="16">common/box.png</texture>
            <aspectratio>stretch</aspectratio>
        </control>
        <control type="grouplist" id="5">
            <posx>4-col</posx>
            <posy>2-row</posy>
            <width>14-col</width>
            <height>18-row</height>
            <onleft>3</onleft>
            <onright>3</onright>
            <onup>20</onup>
            <ondown>5</ondown>
            <orientation>vertical</orientation>
            <itemgap>0</itemgap>
        </control>
        <control type="button" id="7">
            <description>Default Button</description>
            <include>DefSettingsButton2</include>
            <texturenofocus>-</texturenofocus>
        </control>
        <control type="radiobutton" id="8">
            <description>Default Radio Button</description>
            <include>DefSettingsButton2</include>
            <texturenofocus>-</texturenofocus>
        </control>
        <control type="spincontrolex" id="9">
            <description>Default Spin Control</description>
            <include>DefSettingsButton2</include>
            <texturenofocus>-</texturenofocus>
        </control>
        <control type="sliderex" id="13">
            <description>Default Slider</description>
            <include>DefSettingsButton2</include>
            <texturenofocus>-</texturenofocus>
        </control>
        <!--subcat menu buttons-->
        <control type="button" id="10">
            <description>Default Category Button</description>
            <include>DefSettingsButton2</include>
            <font>Small</font>
            <texturenofocus>-</texturenofocus>
        </control>
    </control>
</controls>
</window>
