<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog">
    <onload condition="Library.IsScanningVideo + Skin.HasSetting(UpdateArt.Enabled)">SetProperty(UpdateArt,1)</onload>
    <onunload condition="!IsEmpty(Window.Property(UpdateArt)) + Skin.HasSetting(UpdateArt.Enabled)">XBMC.RunScript(script.artwork.downloader,mode=custom,silent=true,landscape,clearlogo,clearart)</onunload>
    <onunload condition="!IsEmpty(Window.Property(UpdateArt)) + Skin.HasSetting(UpdateArt.Enabled)">ClearProperty(UpdateArt)</onunload>
    <controls>
        <control type="group">
            <right>72</right>
            <posy>30</posy>
            <width>660</width>
            <height>100</height>
            <include>Animation.FadeIn.Slide</include>
            <include>Animation.FadeOut</include>
            <visible>!Window.IsActive(DialogKaiToast.xml)</visible>
            <visible>!Window.IsVisible(fullscreenvideo)</visible>
            <visible>!Window.IsVisible(visualisation)</visible>
            <control type="image">
                <description>background image</description>
                <posx>0</posx>
                <posy>0</posy>
                <width>660</width>
                <height>100</height>
                <animation effect="fade" start="100" end="90" condition="true">Conditional</animation>
                <texture colordiffuse="$VAR[EmbyMenuColourHighlight]">common/white.png</texture>
            </control>

            <control type="group">

                <control type="group">
                    <left>20</left>
                    <centertop>50%</centertop>
                    <width>64</width>
                    <height>64</height>
                    <control type="label">
                        <aligny>center</aligny>
                        <align>center</align>
                        <top>6</top>
                        <font>symbolosd</font>
                        <textcolor>$VAR[EmbyMenuTextColourHighlight]</textcolor>
                        <height>48</height>
                        <width>auto</width>
                        <label>ïˆ«</label>
                    </control>
                    <control type="image">
                        <centerleft>50%</centerleft>
                        <centertop>50%</centertop>
                        <width>90</width>
                        <height>90</height>
                        <texture colordiffuse="$VAR[EmbyMenuTextColourHighlight]">nextup/30.png</texture>
                        <aspectratio align="center">keep</aspectratio>
                    </control>
                    <control type="image">
                        <centerleft>50%</centerleft>
                        <centertop>50%</centertop>
                        <width>90</width>
                        <height>90</height>
                        <texture colordiffuse="$VAR[EmbyLeftColourHighlight]">$VAR[ProgressPercent32]</texture>
                        <aspectratio align="center">keep</aspectratio>
                    </control>
                </control>

                <control type="label" id="30">
                    <left>104</left>
                    <top>22</top>
                    <height>31</height>
                    <aligny>center</aligny>
                    <font>SmallBold</font>
                    <textcolor>$VAR[EmbyMenuTextColourHighlight]</textcolor>
                </control>
                <control type="label" id="31">
                    <left>104</left>
                    <bottom>15</bottom>
                    <height>30</height>
                    <aligny>center</aligny>
                    <font>Small</font>
                    <textcolor>$VAR[EmbyMenuTextColourHighlight]</textcolor>
                </control>

            </control>
        </control>
       
        <control type="progress" id="32">
            <texturebg>-</texturebg>
            <lefttexture>-</lefttexture>
            <midtexture>-</midtexture>
            <righttexture>-</righttexture>
            <info>Player.Progress</info>
            <animation effect="fade" start="0" end="0" condition="true">Conditional</animation>
        </control>
    </controls>
</window>
