<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="NextAiredGroup">
		<width>270</width>
	</include>
	<include name="NextAiredListGroupParam">
		<control type="group">
			<include>NextAiredGroup</include>
			<control type="list" id="$PARAM[id]">
				<height>896</height>
				<width>475</width>
				<onleft>$PARAM[onleft]</onleft>
				<onright>$PARAM[onright]</onright>
				<orientation>vertical</orientation>
				<itemlayout height="152" width="270">
					<include>NextAiredListItem</include>
				</itemlayout>
				<focusedlayout height="152" width="270">
					<control type="group">
						<visible>!Control.HasFocus($PARAM[id])</visible>
						<include>NextAiredListItem</include>
					</control>
					<control type="group">
						<visible>Control.HasFocus($PARAM[id])</visible>
						<include>NextAiredListFocus</include>
					</control>
				</focusedlayout>
			</control>
		</control>
	</include>
	<include name="NextAiredListItem">
		<control type="image">
			<left>0</left>
			<right>10</right>
			<top>0</top>
			<bottom>10</bottom>
			<aspectratio>scale</aspectratio>
			<texture fallback="pvr/background.jpg">$VAR[NextAiredArt]</texture>
		</control>
	</include>
	<include name="NextAiredListFocus">
		<control type="button">
			<texturefocus>-</texturefocus>
			<texturenofocus>-</texturenofocus>
			<onfocus condition="!Container.Scrolling + Skin.HasSetting(home.blur)">RunScript(script.colorbox,info=blur,id='"$VAR[NextAiredFanart]"',radius=$VAR[VideoInfoBlurLevel],prefix=NextAiredInfo)</onfocus>
		</control>
		<control type="image">
			<aspectratio scalediffuse="false">scale</aspectratio>
			<texture background="true" colordiffuse="$VAR[BorderHighlightColour]">$VAR[FocusedBorderImage]</texture>
			<left>0</left>
			<right>10</right>
			<top>0</top>
			<bottom>10</bottom>
			<animation type="Focus" reversible="false">
				<effect type="zoom" end="106" time="200" center="auto" tween="quadratic" easing="out"/>
				<effect type="rotate" end="1.5" time="200" center="auto" tween="quadratic" easing="out"/>
			</animation>
		</control>
		<control type="image">
			<left>0</left>
			<right>10</right>
			<top>0</top>
			<bottom>10</bottom>
			<aspectratio>scale</aspectratio>
			<texture fallback="pvr/background.jpg">$VAR[NextAiredArt]</texture>
			<animation effect="zoom" end="101" time="0" center="auto">Focus</animation>
		</control>
	</include>
	<variable name="NextAiredArt">
		<value condition="!IsEmpty(ListItem.Property(Art(landscape)))">$INFO[ListItem.Property(Art(landscape))]</value>
		<value condition="!IsEmpty(ListItem.Property(landscape))">$INFO[ListItem.Property(landscape)]</value>
		<value condition="!IsEmpty(ListItem.Property(Fanart))">$INFO[ListItem.Property(Fanart)]</value>
		<value>$INFO[ListItem.Thumb]</value>
	</variable>
</includes>