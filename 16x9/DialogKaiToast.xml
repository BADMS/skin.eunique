<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window id="107">
    <allowoverlay>no</allowoverlay>

    <controls>

        <control type="group">
			<visible>!StringCompare(Container(300).ListItem.Property(defaultID),music)</visible>
            <visible>!Window.IsVisible(DialogVolumeBar.xml)</visible>
            <right>630</right>
            <top>40</top>
            <width>660</width>
            <height>100</height>
            <include>Animation.FadeIn.Slide</include>
            <include>Animation.FadeOut</include>
    
            <control type="image">
                <description>background image</description>
                <width>660</width>
                <height>100</height>
                <colordiffuse>$VAR[EmbyLeftColourHighlight]</colordiffuse>
                <animation effect="fade" start="100" end="90" condition="Skin.HasSetting(osd.usetheme) | [!Window.IsVisible(fullscreenvideo) + !Window.IsVisible(visualisation)]">Conditional</animation>
                <texture>common/white.png</texture>
                <!--
                <bordertexture colordiffuse="$VAR[EmbyRightColourHighlight]">common/white.png</bordertexture>
				<bordersize>6,6,6,6</bordersize>
				-->
            </control>

            <control type="group">
                
                <control type="image" id="400">
                    <left>20</left>
                    <centertop>50%</centertop>
                    <width>64</width>
                    <height>64</height>
                    <aspectratio>keep</aspectratio>
                    <colordiffuse>black</colordiffuse>
                </control>
                
                <control type="label" id="401">
                    <left>104</left>
                    <width>536</width>
                    <top>22</top>
                    <height>24</height>
                    <aligny>center</aligny>
                    <font>TinyBold</font>
                    <textcolor>black</textcolor>
                </control>
                <control type="label" id="402">
                    <left>104</left>
                    <width>536</width>
                    <bottom>22</bottom>
                    <height>24</height>
                    <aligny>center</aligny>
                    <font>Tiny</font>
                    <textcolor>black</textcolor>
                </control>

            </control>
        </control>
        
    </controls>

</window>
