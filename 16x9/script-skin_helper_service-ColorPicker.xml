<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="129">
	<defaultcontrol always="true">3110</defaultcontrol>
	<backgroundcolor>0</backgroundcolor>
	<controls>
		<include>GlobalBackground</include>
		<include>Furniture_NowPlaying</include>
		<control type="group">
			<include>Furniture_HeaderEmby</include>
			<include>Furniture_EmbyClock</include>
		</control>
		<!--Header -->
		<control type="label">
			<posx>770</posx>
			<posy>50</posy>
			<width>auto</width>
			<font>Large</font>
			<label>$ADDON[script.skin.helper.service 32011]</label>
			<align>left</align>
		</control>

		<control type="panel" id="3110">
			<viewtype label="31438">icons</viewtype>
			<left>300</left>
			<top>TopPad</top>
			<width>1302</width>
			<height>714</height>
			<orientation>vertical</orientation>
			<onleft>3110</onleft>
			<onright>3110</onright>
			<onup>3110</onup>
			<ondown>3010</ondown>
			<preloaditems>4</preloaditems>
			<pagecontrol>60</pagecontrol>
			<itemlayout height="42" width="42">
				<control type="image">
					<posx>2</posx>
					<posy>2</posy>
					<width>38</width>
					<height>38</height>
					<texture border="5">$INFO[ListItem.Icon]</texture>
				</control>
			</itemlayout>
			<focusedlayout height="42" width="42">
				<control type="group">
					<animation effect="zoom" time="300" tween="sine" easing="inout" start="100" end="220" center="auto">Focus</animation>
					<control type="image">
						<width>42</width>
						<height>42</height>
						<texture border="10">common/shadow-5.png</texture>
					</control>
					<control type="image">
						<posx>5</posx>
						<posy>5</posy>
						<width>32</width>
						<height>32</height>
						<texture diffuse="diffuse/color-picker.png">$INFO[ListItem.Icon]</texture>
					</control>
				</control>
			</focusedlayout>
		</control>

		<!--current color name-->
		<!--<control type="label">
            <left>60</left>
            <top>920</top>
            <width>600</width>
            <height>40</height>
            <label>$INFO[Window.Property(colorname)]</label>
            <align>left</align>
            <textcolor>white</textcolor>
            <shadowcolor>black</shadowcolor>
        </control>-->

		<control type="grouplist">
			<orientation>horizontal</orientation>
			<itemgap>20</itemgap>
			<left>300</left>
			<top>910</top>
			<width>1302</width>
			<!-- color preview-->
			<control type="image">
				<width>68</width>
				<height>68</height>
				<aspectratio>stretch</aspectratio>
				<texture border="5">common/box.png</texture>
				<colordiffuse>$INFO[Window.Property(colorstring)]</colordiffuse>
			</control>
			<!-- edit manual -->
			<control type="button" id="3010">
				<onup>3110</onup>
				<align>left</align>
				<ondown>SetFocus(3110)</ondown>
				<onright>3011</onright>
				<label>Color:</label>
				<label2>$INFO[Window.Property(colorstring)]</label2>
				<font>Button</font>
				<textcolor>white</textcolor>
				<width>290</width>
				<height>68</height>
				<texturefocus colordiffuse="$VAR[ColourHighlight]">common/box.png</texturefocus>
				<texturenofocus colordiffuse="White70">common/box.png</texturenofocus>
			</control>

			<!-- Save button -->
			<control type="button" id="3012">
				<onup>3110</onup>
				<onleft>3010</onleft>
				<label>190</label>
				<textcolor>white</textcolor>
				<font>Button</font>
				<width>200</width>
				<height>68</height>
				<texturefocus colordiffuse="$VAR[ColourHighlight]">common/box.png</texturefocus>
				<texturenofocus colordiffuse="White70">common/box.png</texturenofocus>
			</control>

			<!-- Cancel -->
			<control type="button" id="3090">
				<onup>3110</onup>
				<onleft>3010</onleft>
				<ondown>SetFocus(3110)</ondown>
				<onclick>Close</onclick>
				<label>Cancel</label>
				<font>Button</font>
				<textcolor>white</textcolor>
				<width>225</width>
				<height>68</height>
				<texturefocus colordiffuse="$VAR[ColourHighlight]">common/box.png</texturefocus>
				<texturenofocus colordiffuse="White70">common/box.png</texturenofocus>
			</control>

			<!-- None -->
			<control type="button" id="3011">
				<visible>False</visible>
				<onup>3110</onup>
				<onleft>3010</onleft>
				<ondown>SetFocus(3110)</ondown>
				<label>$ADDON[script.skin.helper.service 32013]</label>
				<textcolor>white</textcolor>
				<texturefocus colordiffuse="$VAR[ColourHighlight]">common/box.png</texturefocus>
				<texturenofocus colordiffuse="White70">common/box.png</texturenofocus>
			</control>

			<control type="group" id="3020">
				<width>410</width>
				<height>68</height>
				<control type="label" id="3016">
					<!-- label opacity-->
					<font>Button</font>
					<width>130</width>
					<left>0</left>
					<align>left</align>
					<onup>3110</onup>
					<label>$ADDON[script.skin.helper.service 32049]:</label>
					<textcolor>white</textcolor>
					<texturefocus colordiffuse="$VAR[ColourHighlight]">common/box.png</texturefocus>
					<texturenofocus colordiffuse="White70">common/box.png</texturenofocus>
				</control>
				<control type="slider" id="3015">
					<!-- opacity slider -->
					<top>25</top>
					<left>130</left>
					<onup>3011</onup>
					<ondown>3011</ondown>
					<width>200</width>
					<colordiffuse>Black70</colordiffuse>
				</control>

				<control type="label" id="3017">
					<!-- opacity percentage -->
					<font>Button</font>
					<width>80</width>
					<height>68</height>
					<right>0</right>
					<align>right</align>
					<onup>3110</onup>
					<onleft>3010</onleft>
					<label>$INFO[Control.Getlabel(3015)]</label>
					<textcolor>white</textcolor>
					<texturefocus colordiffuse="$VAR[ColourHighlight]">common/box.png</texturefocus>
					<texturenofocus colordiffuse="White70">common/box.png</texturenofocus>
				</control>
			</control>
		</control>
	</controls>
</window>