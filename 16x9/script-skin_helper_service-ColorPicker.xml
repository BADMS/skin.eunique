<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="129">
	<defaultcontrol always="true">3110</defaultcontrol>
	<backgroundcolor>0</backgroundcolor>
	<controls>
		<include>GlobalBackground</include>
		<include>Furniture_NowPlaying</include>
		<control type="group">
			<top>-40</top>
			<include>Furniture_HeaderEmby</include>
			<include>Furniture_EmbyClock</include>
		</control>
		<!--Header -->
		<control type="label">
			<include>animation_fade_visible_hidden</include>
			<posx>770</posx>
			<posy>94</posy>
			<width>auto</width>
			<font>Large</font>
			<label>$ADDON[script.skin.helper.service 32011]</label>
			<align>left</align>
			<textcolor>$INFO[Control.GetLabel(3110)]</textcolor>
		</control>
		<control type="panel" id="3110">
			<viewtype label="31438">icons</viewtype>
			<posx>60</posx>
			<posy>175</posy>
			<width>1836</width>
			<height>800</height>
			<orientation>vertical</orientation>
			<onleft>3110</onleft>
			<onright>60</onright>
			<onup>3110</onup>
			<ondown>3010</ondown>
			<preloaditems>4</preloaditems>
			<pagecontrol>60</pagecontrol>
			<itemlayout height="41" width="41">
				<control type="image">
					<width>92%</width>
					<height>92%</height>
					<texture border="5">$INFO[ListItem.Icon]</texture>
				</control>
			</itemlayout>
			<focusedlayout height="150" width="150">
				<control type="image">
					<width>95%</width>
					<height>95%</height>
					<texture border="5">$INFO[ListItem.Icon]</texture>
				</control>
				<control type="textbox">
					<font>Small</font>
					<left>10</left>
					<top>10</top>
					<right>10</right>
					<width>90%</width>
					<height>90%</height>
					<align>left</align>
					<info>ListItem.Label</info>
					<textcolor>white</textcolor>
					<shadowcolor>black</shadowcolor>
				</control>
			</focusedlayout>
		</control>

		<!--current color name-->
		<control type="label">
			<left>60</left>
			<top>920</top>
			<width>600</width>
			<height>40</height>
			<label>$INFO[Window.Property(colorname)]</label>
			<align>left</align>
			<textcolor>white</textcolor>
			<shadowcolor>black</shadowcolor>
		</control>

		<control type="grouplist">
			<orientation>horizontal</orientation>
			<itemgap>20</itemgap>
			<left>60</left>
			<top>980</top>
			<width>1800</width>
			<!-- color preview-->
			<control type="image">
				<width>100</width>
				<height>60</height>
				<aspectratio>stretch</aspectratio>
				<texture border="5">panel.png</texture>
				<colordiffuse>$INFO[Window.Property(colorstring)]</colordiffuse>
			</control>
			<!-- edit manual -->
			<control type="button" id="3010">
				<width>400</width>
				<height>60</height>
				<font>SmallMedium</font>
				<onup>3110</onup>
				<align>left</align>
				<ondown>SetFocus(3110,1)</ondown>
				<onright>3011</onright>
				<label>$ADDON[script.skin.helper.service 32012]</label>
				<label2>$INFO[Window.Property(colorstring)]</label2>
				<textcolor>white</textcolor>
				<texturefocus colordiffuse="$VAR[ColourHighlight]" border="5">common/box.png</texturefocus>
				<texturenofocus colordiffuse="White70" border="5">common/box.png</texturenofocus>
			</control>

			<!-- Save button -->
			<control type="button" id="3012">
				<width>300</width>
				<height>60</height>
				<font>SmallMedium</font>
				<onup>3110</onup>
				<onleft>3010</onleft>
				<label>190</label>
				<textcolor>white</textcolor>
				<texturefocus colordiffuse="$VAR[ColourHighlight]" border="5">common/box.png</texturefocus>
				<texturenofocus colordiffuse="White70" border="5">common/box.png</texturenofocus>
			</control>

			<!-- None -->
			<control type="button" id="3011">
				<width>300</width>
				<height>60</height>
				<font>SmallMedium</font>
				<onup>3110</onup>
				<onleft>3010</onleft>
				<label>$ADDON[script.skin.helper.service 32013]</label>
				<textcolor>white</textcolor>
				<texturefocus colordiffuse="$VAR[ColourHighlight]" border="5">common/box.png</texturefocus>
				<texturenofocus colordiffuse="White70" border="5">common/box.png</texturenofocus>
			</control>

			<control type="group" id="3020">
				<width>450</width>
				<height>60</height>
				<control type="label" id="3016">
					<!-- label opacity-->
					<width>150</width>
					<left>0</left>
					<align>left</align>
					<onup>3110</onup>
					<label>$ADDON[script.skin.helper.service 32049]:</label>
					<textcolor>white</textcolor>
					<texturefocus colordiffuse="$VAR[ColourHighlight]" border="5">common/box.png</texturefocus>
					<texturenofocus colordiffuse="White70" border="5">common/box.png</texturenofocus>
				</control>
				<control type="slider" id="3015">
					<!-- opacity slider -->
					<top>25</top>
					<left>160</left>
					<onup>3011</onup>
					<ondown>3011</ondown>
					<width>200</width>
				</control>

				<control type="label" id="3017">
					<!-- opacity percentage -->
					<width>80</width>
					<height>60</height>
					<right>0</right>
					<align>right</align>
					<onup>3110</onup>
					<onleft>3010</onleft>
					<label>$INFO[Control.Getlabel(3015)]</label>
					<textcolor>white</textcolor>
					<texturefocus colordiffuse="$VAR[ColourHighlight]" border="5">common/box.png</texturefocus>
					<texturenofocus colordiffuse="White70" border="5">common/box.png</texturenofocus>
				</control>
			</control>
		</control>
	</controls>
</window>