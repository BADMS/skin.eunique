<?xml version="1.0" encoding="UTF-8"?>
<window>
    <allowoverlay>yes</allowoverlay>
    <defaultcontrol always="true">401</defaultcontrol>

    <controls>
        <include>GlobalOverlay</include>
        <control type="group">
            <include>Animation.Common</include>
            <left>NewSidePad</left>
            <right>NewSidePad</right>
            <top>TopPad</top>
            <control type="image">
                <height>72</height>
                <texture>common/white.png</texture>
                <colordiffuse>$VAR[EmbyMenuTextColourHighlight]</colordiffuse>
                <aspectratio>stretch</aspectratio>
            </control>
            <control type="image">
                <top>72</top>
                <height>824</height>
                <texture>common/white.png</texture>
                <colordiffuse>$VAR[EmbyMenuColourHighlight]</colordiffuse>
                <aspectratio>stretch</aspectratio>
            </control>
            <control type="label" id="500">
                <height>72</height>
                <aligny>center</aligny>
                <align>center</align>
                <font>settingsheader</font>
                <textcolor>$VAR[EmbyMenuColourHighlight]</textcolor>
                <shadowcolor>-</shadowcolor>
            </control>

            <control type="group">
                <!-- Left Group -->
                <control type="list" id="211">
                    <description>Button Area</description>
                    <top>72</top>
                    <height>824</height>
                    <width>500</width>
                    <onleft>211</onleft>
                    <onright>9100</onright>
                    <onup>211</onup>
                    <ondown>211</ondown>
                    <orientation>vertical</orientation>
                    <itemlayout width="500" height="103">
                        <control type="image">
                            <aspectratio scalediffuse="false">stretch</aspectratio>
                            <texture>common/box.png</texture>
                            <colordiffuse>$VAR[EmbyMenuColourHighlight]</colordiffuse>
                        </control>
                        <control type="label">
                            <left>30</left>
                            <right>30</right>
                            <info>ListItem.Label</info>
                            <font>Small</font>
                            <textcolor>$VAR[EmbyMenuTextColourHighlight]</textcolor>
                        </control>
                    </itemlayout>
                    <focusedlayout width="500" height="103">
                        <control type="image">
                            <aspectratio scalediffuse="false">stretch</aspectratio>
                            <texture>common/box.png</texture>
                            <colordiffuse>$VAR[EmbyLeftColourHighlight]</colordiffuse>
                            <animation effect="fade" time="50" start="100" end="50" condition="!Control.HasFocus(211)">Conditional</animation>
                        </control>
                        <control type="label">
                            <left>30</left>
                            <right>30</right>
                            <info>ListItem.Label</info>
                            <font>Small</font>
                            <textcolor>$VAR[ColourSelected]</textcolor>
                        </control>
                    </focusedlayout>
                </control>


                <!-- Right Group -->
                <control type="grouplist" id="9100">
                    <description>Control Area</description>
                    <left>500</left>
                    <top>72</top>
                    <height>824</height>
                    <itemgap>0</itemgap>
                    <onleft>211</onleft>
                    <onright>9000</onright>
                    <onup>9100</onup>
                    <ondown>9100</ondown>
                    <orientation>vertical</orientation>
                    <control type="button" id="401" description="Alt chooser">
                        <width>1410</width>
                        <include>DefSettingsButton2</include>
                    </control>
                    <control type="button" id="307" description="Custom">
                        <width>1410</width>
                        <include>DefSettingsButton2</include>
                        <label2>$INFO[Container(211).ListItem.Property(displaypath)]</label2>
                    </control>
                    <control type="button" id="305" description="Set label">
                        <width>1410</width>
                        <include>DefSettingsButton2</include>
                        <label2>$INFO[Container(211).ListItem.Label]</label2>
                    </control>
                    <control type="button" id="501" description="Widgets">
                        <width>1410</width>
                        <include>DefSettingsButton2</include>
                        <label>31951</label>
                        <onclick>ActivateWindow(1112)</onclick>
                    </control>
                    <control type="button" id="310" description="Background">
                        <width>1410</width>
                        <include>DefSettingsButton2</include>
                        <label2>$INFO[Container(211).ListItem.Property(backgroundName)]</label2>
                        <visible>stringcompare(Window.Property(groupname),mainmenu)</visible>
                    </control>
                    <control type="button" id="405" description="Set submenu">
                        <width>1410</width>
                        <include>DefSettingsButton2</include>
                        <label>Manage submenu</label>
                        <visible>stringcompare(Window.Property(groupname),mainmenu)</visible>
                    </control>
                    <control type="button" id="301" description="Add">
                        <width>1410</width>
                        <include>DefSettingsButton2</include>
                    </control>
                    <control type="button" id="302" description="Delete">
                        <width>1410</width>
                        <include>DefSettingsButton2</include>
                    </control>
                    <control type="button" id="308" description="Reset">
                        <width>1410</width>
                        <include>DefSettingsButton2</include>
                        <visible>!stringcompare(Window.Property(groupname),mainmenu)</visible>
                    </control>
                    <control type="button" id="303" description="Up">
                        <width>1410</width>
                        <include>DefSettingsButton2</include>
                    </control>
                    <control type="button" id="304" description="Down">
                        <width>1410</width>
                        <include>DefSettingsButton2</include>
                    </control>

                </control>

            </control>
        </control>
        <!-- 404, for setting custom property -->
        <control type="button" id="404">
            <visible>False</visible>
            <left>-100000</left>
            <top>-100000</top>
            <width>1</width>
            <height>1</height>
            <onclick>noop</onclick>
        </control>
    </controls>
</window>
