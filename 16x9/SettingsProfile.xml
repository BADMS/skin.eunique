<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window id="34">
    <defaultcontrol always="true">4</defaultcontrol>
    <allowoverlay>yes</allowoverlay>

    <controls>
        <include condition="!Skin.HasSetting(lights.out)">GlobalBackground</include>
        <include>Furniture_HeaderEmby</include>
        <include>Furniture_EmbyClock</include>
        <include>Furniture_NowPlaying</include>
        <include>GlobalOverlay</include>

        <control type="group">
            <width>700</width>
            <include>DefDialogInfoPanel</include>
            
            <control type="label">
                <description>Header Label</description>
                <centerleft>50%</centerleft>
                <width>1000</width>
                <align>center</align>
                <label>10130</label>
                <posy>10</posy>
                <font>settingsheader</font>
                <textcolor>$VAR[EmbyMenuColourHighlight]</textcolor>
            </control>

            <control type="radiobutton" id="4">
                <description>Enable Login Screen</description>
                <left>-8</left>
                <right>-8</right>
                <textoffsetx>20</textoffsetx>
                <posy>100</posy>
                <label>20096</label>
                <align>left</align>
                <ondown>2</ondown>
                <radioposx>644</radioposx>
                <textcolor>$VAR[EmbyMenuTextColourHighlight]</textcolor>
                <textureradiofocus colordiffuse="$VAR[ColourSelected]">buttons/radio-on.png</textureradiofocus>
                <textureradionofocus colordiffuse="$VAR[EmbyMenuTextColourHighlight]">buttons/radio-off.png</textureradionofocus>
                <texturefocus colordiffuse="$VAR[EmbyMiddleColourHighlight]" border="5">common/box.png</texturefocus>
                <texturenofocus colordiffuse="$VAR[EmbyMenuColourHighlight]" border="5">common/box.png</texturenofocus>
            </control>

            <control type="list" id="2">
                <left>-8</left>
                <right>-8</right>
                <posy>159</posy>
                <height>483</height>
                <onup>4</onup>
                <itemlayout height="69" width="716">

                    <control type="label">
                        <posx>20</posx>
                        <info>ListItem.Label</info>
                        <textcolor>$VAR[EmbyMenuTextColourHighlight]</textcolor>
                    </control>

                    <control type="label">
                        <right>20</right>
                        <align>right</align>
                        <font>Tiny</font>
                        <info>ListItem.Label2</info>
                        <textcolor>$VAR[EmbyMenuTextColourHighlight]</textcolor>
                    </control>

                </itemlayout>

                <focusedlayout height="69" width="716">
                    <control type="group">
                        
                        <visible>Control.HasFocus(2)</visible>
                        <control type="image">
                            <height>66</height>
                            <texture border="5" colordiffuse="$VAR[EmbyMiddleColourHighlight]">common/box.png</texture>
                        </control>

                        <control type="label">
                            <posx>20</posx>
                            <textcolor>$VAR[ColourSelected]</textcolor>
                            <info>ListItem.Label</info>
                        </control>

                        <control type="label">
                            <right>20</right>
                            <align>right</align>
                            <font>Tiny</font>
                            <textcolor>$VAR[ColourSelected]</textcolor>
                            <info>ListItem.Label2</info>
                        </control>
                    </control>
                    <control type="group">
                        <visible>!Control.HasFocus(2)</visible>
                        <control type="label">
                            <posx>20</posx>
                            <width>810</width>
                            <info>ListItem.Label</info>
                            <textcolor>$VAR[EmbyMenuTextColourHighlight]</textcolor>
                        </control>

                        <control type="label">
                            <right>20</right>
                            <width>810</width>
                            <align>right</align>
                            <font>Tiny</font>
                            <info>ListItem.Label2</info>
                            <textcolor>$VAR[EmbyMenuTextColourHighlight]</textcolor>
                        </control>
                    </control>

                </focusedlayout>

            </control>

        </control>

    </controls>

</window>
