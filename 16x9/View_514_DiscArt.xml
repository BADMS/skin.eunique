                    <control type="group">
                        <control type="label">
                            <centerright>180</centerright>
                            <centertop>179</centertop>
                            <width>40</width>
                            <height>40</height>
                            <font>symbolback</font>
                            <label>$VAR[PercentWatchedBack]</label>
                            <textcolor>white2</textcolor>
                        </control>
                        <control type="label">
