                        <description>Landscape</description>
                        <posx>5</posx>
                        <posy>5</posy>
                        <width>350</width>
                        <height>350</height>
                        <texture background="true" fallback="cdart/default.png">$VAR[CDArt]</texture>
                        <aspectratio scalediffuse="false">keep</aspectratio>
                        <visible>!IsEmpty(ListItem.Art(discart))</visible>
                    </control>
                    <control type="image">
                        <description>Landscape</description>
                        <posx>5</posx>
                        <posy>5</posy>
                        <width>350</width>
                        <height>350</height>
                        <aspectratio scalediffuse="false">stretch</aspectratio>
                        <texture diffuse="cdart/cdart-mask.png">$VAR[PosterImage]</texture>
                        <visible>IsEmpty(ListItem.Art(discart))</visible>
                    </control>
                    <control type="group">
                        <control type="label">
                            <centerright>180</centerright>
                            <centertop>179</centertop>
                            <width>40</width>
                            <height>40</height>
                            <font>symbolback</font>
                            <label>$VAR[PercentWatchedBack]</label>
                            <textcolor>white2</textcolor>
                        </control>
                            <control type="label">
                            <centerright>180</centerright>
                            <centertop>180</centertop>
                                <width>32</width>
                                <height>32</height>
                                <align>center</align>
                                <font>minisymbol</font>
                                <label>$VAR[PercentWatchedLabel]</label>
                                <textcolor>$VAR[UnwatchedColourHighlight]</textcolor>
                                <scroll>true</scroll>
                                <visible>[Container.Content(tvshows) | Container.Content(seasons)]</visible>
                            </control>
                        <control type="label">
                            <centerright>178</centerright>
                            <centertop>179</centertop>
                            <width>32</width>
                            <height>32</height>
                            <font>symbolview</font>
                            <label>$VAR[PercentWatchedLabel]</label>
                            <textcolor>$VAR[UnwatchedColourHighlight]</textcolor>
                                <visible>![Container.Content(tvshows) | Container.Content(seasons)]</visible>
                        </control>
                        <visible>!stringcompare(ListItem.Label,..) + stringcompare(ListItem.Overlay,OverlayUnwatched.png) + Skin.HasSetting(furniture.unwatched) + !ListItem.IsResumable + !ListItem.IsResumable</visible>
